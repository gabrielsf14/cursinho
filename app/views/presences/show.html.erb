<div class="page-header">
  <%= link_to presences_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_presence_path(@presence), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show presence</h1>
</div>

<dl class="dl-horizontal">
  <dt>Is present:</dt>
  <dd><%= @presence.is_present %></dd>

  <dt>Date:</dt>
  <dd><%= @presence.date %></dd>

  <dt>Student:</dt>
  <dd><%= @presence.student.name %></dd>

</dl>
