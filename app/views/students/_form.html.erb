<%= form_for(@student, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @student.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h4>

      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :registration, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :registration, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cpf, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cpf, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_of_birth, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :date_of_birth, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :lesson, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :lesson_id, Lesson.all.collect { |lesson| [lesson.name, lesson.id] } %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
