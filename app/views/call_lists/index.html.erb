<div class="page-header">
  <%= link_to new_lesson_call_list_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Call list
  <% end %>
  <h1>Listing call lists</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Id</th>
            <th>Data</th>
            <th>Detalhes</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @call_lists) do |call_list| %>
            <td><%= call_list.id %></td>
            <td><%= call_list.data %></td>
            <td><%= link_to 'Show', lesson_call_list(call_list.lesson, call_list) %></td>
      <% end %>
    </tbody>
  </table>
</div>
